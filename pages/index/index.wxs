var isPlaying = function (track) {
  return !!track.index || track.index === 0;
};

var isActive = function (index, track, epIndex) {
  return index === track.index && track.epIndex === epIndex;
};

var pad = function (val) {
  if (val < 10) {
    return "0" + val;
  }

  return val;
};

var toSongTime = function (seconds) {
  var left = Math.floor(seconds / 60);
  var right = Math.round(seconds % 60);
  return pad(left) + ":" + pad(right);
};

var round = function (val) {
  return Math.round(val);
};

module.exports = {
  isPlaying: isPlaying,
  isActive: isActive,
  pad: pad,
  toSongTime: toSongTime,
  round: round,
};
